<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_category_frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGreen"
    tools:context=".add_category">

    <!-- EditText for category input -->

    <!-- Button to add category -->
    <ImageView
        android:id="@+id/categoryImage"
        android:layout_width="211dp"
        android:layout_height="195dp"
        android:background="@drawable/image_border"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintBottom_toTopOf="@+id/editTextCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_32"

        android:layout_marginEnd="@dimen/dim_32"
        android:background="@drawable/edit_text_background"
        android:elevation="4dp"
        android:hint="@string/enter_category_name"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/buttonAddCategory"
        android:layout_width="@dimen/dim_150"
        android:layout_height="@dimen/dim_65"
        android:layout_marginTop="@dimen/dim_96"
        android:background="@drawable/button_background"
        android:elevation="4dp"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp"
        android:text="@string/add"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dim_30"
        app:layout_constraintEnd_toEndOf="@id/editTextCategory"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@id/editTextCategory"
        app:layout_constraintTop_toBottomOf="@id/editTextCategory" />



</androidx.constraintlayout.widget.ConstraintLayout>
