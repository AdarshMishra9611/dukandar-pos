<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/salseCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:padding="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"

        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <!-- Bill Number -->

            <!-- Bill Date -->

            <TextView
                android:id="@+id/textViewBillNumber"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="238dp"
                android:text="AM-99999"
                android:textColor="@color/darkGray"
                android:textSize="24sp" />

            <!-- Total Bill Amount -->

            <TextView
                android:id="@+id/textViewBillDate"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewBillNumber"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="107dp"
                android:layout_toStartOf="@+id/textViewTotalBillAmount"
                android:text="05 Aug 2024 9:45"
                android:textColor="@color/darkGray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textViewTotalBillAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="15dp"
                android:text="â‚¹ 999999"
                android:textColor="@color/emeraldGreen"
                android:textSize="24sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
