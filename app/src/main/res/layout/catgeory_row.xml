<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/categoryCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dim_5"
    android:layout_marginRight="@dimen/dim_2"
    android:layout_marginTop="@dimen/dim_8"
    android:layout_marginBottom="@dimen/dim_8">

    <!-- Card View to hold category details with elevation -->
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dim_115"
        android:layout_height="@dimen/dim_150"
        app:cardCornerRadius="@dimen/dim_15"
        app:cardBackgroundColor="@color/emeraldGreen"
        app:cardElevation="@dimen/dim_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Image of the category -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/categoryImage"
                android:layout_width="@dimen/dim_100"
                android:layout_height="@dimen/dim_95"
                android:layout_marginLeft="@dimen/dim_8"
                android:layout_marginTop="@dimen/dim_9"
                android:layout_marginBottom="@dimen/dim_2"
                android:background="@color/black"
                android:src="@drawable/cart"
                app:shapeAppearanceOverlay="@style/roundedImageView" />

            <!-- Category text -->
            <TextView
                android:id="@+id/categoryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textAlignment="center"
                android:textColor="@color/smokeyWhite"
                android:textSize="24sp"
                android:textStyle="normal"
                app:autoSizeTextType="uniform" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>
